CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_NRF52832_QFAA=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# enable GPIO
CONFIG_GPIO=y

# enable uart driver
CONFIG_SERIAL=y

# additional board options
CONFIG_GPIO_AS_PINRESET=y

# Disable external 32k clock source
CONFIG_CLOCK_CONTROL_NRF_K32SRC_RC=y

# Enable gpio quadrature decoders
CONFIG_QDEC_GPIO=y

# Enable NRFX TWIS driver
CONFIG_NRFX_TWIS1=y